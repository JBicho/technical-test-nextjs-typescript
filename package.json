{
  "name": "technical-test-nextjs-typescript",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:coverage": "npx jest --coverage",
    "test:client:coverage": "jest --selectProjects node --coverage",
    "test:api:coverage": "jest --selectProjects dom --coverage",
    "test:api": "jest --watchAll --selectProjects node",
    "test:api:ci": "jest --runInBand --selectProjects node --updateSnapshot",
    "test:client": "jest --watchAll --selectProjects dom",
    "test:client:ci": "jest --runInBand --selectProjects node --updateSnapshot",
    "format": "prettier --write .",
    "prepare": "husky",
    "format:check": "prettier --check .",
    "lint:fix": "eslint --fix .",
    "format:fix": "prettier --write .",
    "fix": "npm run lint:fix && npm run format:fix"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "next": "^14.2.17",
    "react": "18.3.1",
    "react-dom": "18.2.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@netlify/plugin-nextjs": "^5.8.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "18.16.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@types/styled-components": "5.1.26",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.4.1",
    "lint-staged": "^15.2.10",
    "node-mocks-http": "^1.16.1",
    "prettier": "^3.3.3",
    "sharp": "^0.33.5",
    "typescript": "5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.tsx": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.jsx": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
